<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="itemCommunity"
            type="com.yun.mysimpletravel.data.model.community.CommunityDataModel.RS" />

        <variable
            name="communityListener"
            type="com.yun.mysimpletravel.base.BaseRecyclerAdapter.OnItemClickListener" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:onClick="@{(v) -> communityListener.onItemClick(itemCommunity, v)}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <include
            android:id="@+id/ic_profile"
            layout="@layout/view_profile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            app:name="@{itemCommunity.userInfo.userName}"
            app:width="@{`30`}"
            app:height="@{`30`}"
            app:url="@{itemCommunity.userInfo.userProfileUrl}" />

        <ImageView
            android:id="@+id/iv_contents"
            android:layout_width="match_parent"
            setCommunity="@{itemCommunity.fileUrl}"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ic_profile" />

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemCommunity.contents}"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_contents" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>